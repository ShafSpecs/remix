{
  "include": ["**/*.ts"],
  "exclude": ["dist", "__tests__", "node_modules"],
  "compilerOptions": {
    "lib": ["ES2020", "DOM.Iterable"],
    "target": "ES2020",
    "module": "ES2020",
    "skipLibCheck": true,
    "composite": true,

    "moduleResolution": "Bundler",
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "declaration": true,
    "emitDeclarationOnly": true,
    "rootDir": ".",
    "outDir": "../../build/node_modules/@remix-run/serve/dist"
  }
}
